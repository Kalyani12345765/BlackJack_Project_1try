import random
cards = [11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10]

Play= input("Do you want to play a game of Blackjack? Type 'y' or 'n': ")
if Play=="y":
    #user_choice
    user_choice1= random.choice(cards) #using random module--> use choice function ie. random.choice()
    user_list=[user_choice1] #list-->later to add second choice and further choice of user_cards

    #computer_choice/ dealer
    computer_choice1= random.choice(cards)
    computer_choice2= random.choice(cards)
    first_total_comp=computer_choice1+ computer_choice2
    comp_list= [computer_choice1, computer_choice2]


    looping= True
    while looping:
        user_choice2= random.choice(cards)
        user_list.append(user_choice2) #adding the items into list (works on original list)
        print(user_list)
        first_total_user= user_choice1+user_choice2

        print(f"Your cards:{user_list}, current score: {first_total_user}")
        print(f"Computer's first card: {computer_choice1}")

        user_input=input("Type 'y' to get another card, type 'n' to pass: ")
        if user_input=="y":
            user_choice1=first_total_user

        elif user_input=="n":
            print(f"Your final hand: {user_list}, final score: {first_total_user}")
            print(f"Computer's final hand: {comp_list}, final score: {first_total_comp}")

            if first_total_user<=21 and first_total_user>first_total_comp:
                print("You win!")
            elif first_total_user < first_total_comp:
                print("You lose!")
            elif first_total_user == first_total_comp:
                print("Draw!")
            looping= False #now the play is over.

        if first_total_user > 21:
            print(f"Your final hand: {user_list}, final score: {first_total_user}")
            print(f"Computer's final hand: {comp_list}, final score: {first_total_comp}")
            print("You lose!You went over! Busted")
            looping= False #play is over, because user is Busted, went over the 21.

        # elif first_total_user < first_total_comp:
        #     print("You lose!")
        # elif first_total_user == first_total_comp:
        #     print("Draw!")

else:
    print("Have a nice day!")



